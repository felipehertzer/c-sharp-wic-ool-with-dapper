@model IEnumerable<WicSchool.Models.Employee>

@{
    ViewBag.Title = "View Employees";
}

<h2>View Employees</h2>

<form method="get">
    <div class="row" style="margin-bottom: 1rem;">
        <div class="col-sm-6">
            <div class="input-group mb-3" style="display: block;">
                <input type="text" class="form-control" name="search" style="width:250px" value="@ViewBag.Search" placeholder="Search..." aria-label="name" aria-describedby="button-addon2">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="submit" id="button-addon2"><i class="glyphicon glyphicon-search"></i></button>
                </div>
            </div>
        </div>
        <div class="col-sm-6 text-right">
            @Html.ActionLink("New Employee", "SignUp")
        </div>
    </div>
</form>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RatePerHour)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmployeeType)
                </td>
                <td>
                   $ @Html.DisplayFor(modelItem => item.RatePerHour)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
        </tbody>
</table>
