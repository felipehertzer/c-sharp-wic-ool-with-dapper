@{
    ViewBag.Title = "Calculate Wage";
}

<h2>Calculate Wage</h2>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
<div class="alert alert-danger">@ViewBag.Message</div>
}

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div class="form-group">
                <label>EmployeeId</label>
                <input class="form-control" name="employeeId" type="number" value="@ViewBag.EmployeeId" required />
            </div>

            <div class="form-group">
                <label>Hours</label>
                <input class="form-control" name="hours" type="tel" value="@ViewBag.Hours" required />
            </div>

            <button class="btn btn-primary" type="submit">Calculate</button>
        </form>
    </div>
    <div class="col-md-6">
        <h3>Value: @ViewBag.Value</h3>
        <h3>Tax Payable: @ViewBag.TaxValue</h3>
    </div>
</div>